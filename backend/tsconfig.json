{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2019",
    "module": "commonjs",
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
